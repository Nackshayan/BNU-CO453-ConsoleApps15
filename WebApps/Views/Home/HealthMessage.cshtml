    <h1>HealthMessage</h1>
    <h2>by Kate Gordon</h2>
</header>
<section>
    <h2>Your BMI Index</h2>
    <p class="text-lead">
        @bmi.GetBmiMeaning()
    </p>
    <h2>BAME Message</h2>
    <p class="text-info">
        @bmi.GetBameMessage()
    </p>
</section>